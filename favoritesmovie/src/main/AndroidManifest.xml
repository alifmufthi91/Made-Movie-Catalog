<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.favoritesmovie">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="com.example.moviecatalogue_made_s2.READ_DATABASE" />
    <uses-permission android:name="com.example.moviecatalogue_made_s2.WRITE_DATABASE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_favorites"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_favorites_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.favoritesmovie.ui.activity.DetailShowActivity"
            android:theme="@style/DetailTheme" />
        <activity android:name="com.example.favoritesmovie.ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
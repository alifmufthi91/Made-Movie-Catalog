<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviecatalogue_made_s2">

    <uses-permission android:name="android.permission.INTERNET" />


    <permission android:name="com.example.moviecatalogue_made_s2.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.example.moviecatalogue_made_s2.WRITE_DATABASE" android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_movie"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_movie_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name=".provider.FavoritesProvider"
            android:authorities="com.example.moviecatalogue_made_s2"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.example.moviecatalogue_made_s2.READ_DATABASE"
            android:writePermission="com.example.moviecatalogue_made_s2.WRITE_DATABASE"></provider>

        <activity android:name=".ui.activity.FavoritesActivity" />
        <activity
            android:name=".ui.activity.DetailShowActivity"
            android:theme="@style/DetailTheme" />
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviecatalogue">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <permission
        android:name="com.example.moviecatalogue.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.example.moviecatalogue.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_movie"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_movie_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name="com.example.moviecatalogue.provider.StackWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/stack_widget_info" />
        </receiver>
        <receiver
            android:name="com.example.moviecatalogue.service.AlarmReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name="com.example.moviecatalogue.settings.SettingsActivity" />
        <activity android:name="com.example.moviecatalogue.search.SearchByGenreActivity" />
        <activity android:name="com.example.moviecatalogue.search.SearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:name="com.example.moviecatalogue.provider.FavouriteProvider"
            android:authorities="com.example.moviecatalogue"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.example.moviecatalogue_made_s2.READ_DATABASE"
            android:writePermission="com.example.moviecatalogue_made_s2.WRITE_DATABASE" />

        <activity android:name="com.example.moviecatalogue.favourite.FavouriteActivity" />
        <activity
            android:name="com.example.moviecatalogue.detail.DetailShowActivity"
            android:theme="@style/DetailTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.moviecatalogue.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.example.moviecatalogue.service.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>